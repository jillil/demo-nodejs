extends ./layout/common.pug
block content
  .container
    h1 
      span.mr-3 User

    .d-flex.align-items-center
      a.btn.btn-primary(href="/user/create") Create new user
      form.ml-auto(action="/user/search", method='GET' class="d-flex ")
        input(type="text", name='q', value=q, class="form-control" placeholder="User name")
        button.btn.btn-primary.ml-2 Search
    table.table
      tr
        th Name
        th Image
        th Phone
        th Action
        each item in user
          tr
            td=item.name
            td
              img(src=item.avatar style='width: 3rem;')
            td=item.phone 
            td
              a.btn.btn-light(href="/user/"+item.id) View
